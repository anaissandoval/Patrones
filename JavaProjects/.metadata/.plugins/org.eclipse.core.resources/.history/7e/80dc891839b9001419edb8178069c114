import java.util.Scanner;


public class MainClass {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		while(true){
			System.out.flush();
			System.out.println("Digite el numero de ejericio que desea ver: ");
			String exerciseNumber = in.nextLine();
			switch(exerciseNumber){
				case "3":
					Exercise3();
					break;
				case "5":
					Exercise5();
					break;
				case "16":
					Exercise3();
					break;
				case "20":
					Exercise3();
					break;
				case "34":
					Exercise3();
					break;
				case "41":
					Exercise3();
					break;
				case "44":
					Exercise3();
					break;
				case "52":
					Exercise3();
					break;
				case "57":
					Exercise3();
					break;
				case "69":
					Exercise3();
					break;
				case "70":
					Exercise3();
					break;
				case "76":
					Exercise3();
					break;
				case "94":
					Exercise3();
					break;
				case "95":
					Exercise3();
					break;
				case "114":
					Exercise3();
					break;
				case "136":
					Exercise3();
					break;
				default:
					System.out.println("No se encontró la opción seleccionada");;
			}
			in.nextLine();
		}

	}

	private static void Exercise3() {
		System.out.println("     *");
		System.out.println("    ***");
		System.out.println("   *****");
		System.out.println("  ********");
		System.out.println(" **********");
		System.out.println("     *");
		System.out.println("Exercise 3: Supruce");
	}
	
	private static void Exercise5() {
		double days=360;
		double hours=24;
		double minutes=60;
		double seconds=60;
		double secondsByYear=days*hours*minutes*seconds;
		System.out.println("One year is "+ secondsByYear +" seconds.");
		System.out.println("Exercise 5: Seconds in a year");
	}

}
